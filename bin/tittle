import sys
import os
import gtk

# Check if we are working in the source tree or from the installed 
# package and mangle the python path accordingly
if os.path.dirname(sys.argv[0]) != ".":
    if sys.argv[0][0] == "/":
        fullPath = os.path.dirname(sys.argv[0])
    else:
        fullPath = os.getcwd() + "/" + os.path.dirname(sys.argv[0])
else:
    fullPath = os.getcwd()
sys.path.insert(0, os.path.dirname(fullPath))

from tittle import AboutTittleDialog, PreferencesTittleDialog, rtm
from tittle.tittleconfig import getdatapath

class TittleWindow(gtk.Window):
    __gtype_name__ = "TittleWindow"

    def __init__(self):
        """__init__ - This function is typically not called directly.
        Creation a TittleWindow requires redeading the associated ui
        file and parsing the ui definition extrenally,
        and then calling TittleWindow.finish_initializing().

        Use the convenience function NewTittleWindow to create
        TittleWindow object.

        """
        pass

    def finish_initializing(self, builder):
        """finish_initalizing should be called after parsing the ui definition
        and creating a TittleWindow object with it in order to finish
        initializing the start of the new TittleWindow instance.

        """
        #get a reference to the builder and set up the signals
        self.builder = builder
        self.builder.connect_signals(self)

        #uncomment the following code to read in preferences at start up
        #dlg = PreferencesTittleDialog.NewPreferencesTittleDialog()
        #self.preferences = dlg.get_preferences()

        #code for other initialization actions should be added here
        api_key, shared_secret, token = rtm.RTMConfig()
        lists_text, lists_text_done = rtm.RTMGetLists(api_key, shared_secret, token)
        text = "\n".join(lists_text)
        text_done = "\n".join(lists_text_done)
        buff_tasks = self.builder.get_object("tasks_list").get_buffer()
        buff_tasks.set_text(text)
        buff_tasks_done = self.builder.get_object("tasks_list_done").get_buffer()
        buff_tasks_done.set_text(text_done)
        self.builder.get_object("num_open").set_text(str(len(lists_text)))
        self.builder.get_object("num_completed").set_text(str(len(lists_text_done)))


    def about(self, widget, data=None):
        """about - display the about box for tittle """
        about = AboutTittleDialog.NewAboutTittleDialog()
        response = about.run()
        about.destroy()

    def preferences(self, widget, data=None):
        """preferences - display the preferences window for tittle """
        prefs = PreferencesTittleDialog.NewPreferencesTittleDialog()
        response = prefs.run()
        if response == gtk.RESPONSE_OK:
            #make any updates based on changed preferences here
            pass
        prefs.destroy()

    def quit(self, widget, data=None):
        """quit - signal handler for closing the TittleWindow"""
        self.destroy()

    def on_destroy(self, widget, data=None):
        """on_destroy - called when the TittleWindow is close. """
        #clean up code for saving application state should be added here

        gtk.main_quit()

def NewTittleWindow():
    """NewTittleWindow - returns a fully instantiated
    TittleWindow object. Use this function rather than
    creating a TittleWindow directly.
    """

    #look for the ui file that describes the ui
    ui_filename = os.path.join(getdatapath(), 'ui', 'TittleWindow.ui')
    if not os.path.exists(ui_filename):
        ui_filename = None

    builder = gtk.Builder()
    builder.add_from_file(ui_filename)
    window = builder.get_object("tittle_window")
    window.finish_initializing(builder)
    return window

if __name__ == "__main__":
    #support for command line options
    import logging, optparse
    parser = optparse.OptionParser(version="%prog %ver")
    parser.add_option("-v", "--verbose", action="store_true", dest="verbose", help="Show debug messages")
    (options, args) = parser.parse_args()

    #set the logging level to show debug messages
    if options.verbose:
        logging.basicConfig(level=logging.DEBUG)
        logging.debug('logging enabled')

    #run the application
    window = NewTittleWindow()
    window.show()
    gtk.main()

